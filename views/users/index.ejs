<!DOCTYPE html>
<html>
  <head>
  <% include ../partials/head.ejs %>
    <title></title>
  </head>
  <body>
    <header>

      <div class='row'>

      <div class='col-md-2'>
        <a href='/'>Fish Finder</a>
      </div>

      <div class='col-md-10'>
        <a href='/photos'>Photos</a>
        <a href='/users'>Anglers</a>
        <a href='/logout'>Logout</a>
      </div>

    </div>
    </header>

    <ul>
      <% for(let i = 0; i < user.length; i++) { %>
        <li>
          Username: <a href='/users/<%=user[i].id%>'><%=user[i].username%></a><br>
          Location: <%=user[i].location%><br>

          <form action='users/<%=user[i].id%>?_method=DELETE' method='POST'>
            <input type='submit' value='DELETE'/><br>

          <a href='users/<%=user[i].id%>/edit'>Edit User<a>
          </form>

        </li>
    <% } %>
    </ul>
  </body>


  <style>
  .col-md-2 {
    position: relative;
    top: 10%;
    font-size: 35px;
    font-family: 'Gloria Hallelujah', cursive;
    color: white;
    left: 10%;
  }

  .col-md-10 {
    position: relative;
    top: 35%;
    left: 60%;
    color: white;
    font-size: 16px;
  }

  .row a {
      color: white;
      padding-right: 20px;
      font-family: 'Gloria Hallelujah', cursive;
  }

  .row {
    background-color: green;
    height: 65px;
    margin-bottom: 50px;
  }
  </style>
</html>
